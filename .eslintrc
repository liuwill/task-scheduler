{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html",
    "react"
  ],
  "globals": {
    "_GLOBAL_CONFIG": true
  },
  "rules": {
    "no-param-reassign": 0,
    "no-extra-semi": 1,
    "semi": [ 1, "never" ],
    "comma-dangle": [ 1, "only-multiline" ],
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-else-return": 1,
    "no-cond-assign": 2,
    "no-native-reassign": 2,
    "no-multi-spaces": 1,
    "block-scoped-var": 2,
    "no-loop-func": 2,
    "no-trailing-spaces": 2,
    "padded-blocks": [0, "never"],
    "space-before-function-paren": [0, "always"],
    "key-spacing": [ 1, {
      "beforeColon": false,
      "afterColon": true
    }],
    "react/jsx-uses-vars": 1
  }
}

